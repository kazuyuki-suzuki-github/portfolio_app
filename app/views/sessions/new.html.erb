




<div class="wrap">
  <h1>Log in</h1>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div class="field">
      <p><%= f.label :email, class: 'email-label'%></p>
      <%= f.email_field :email, class: 'form-control email-field' %>
    </div>
    <div class="field">
      <p><%= f.label :password, class: 'password-label'%></p>
      <%= f.password_field :password, class: 'form-control password-field' %>
    </div>
    <div class="field">
      <%= f.submit "Log in", class: 'login-field' %>
    </div>
    <% end %>
</div>
