<div>
	<h3>検索条件</h3>
	<div class="search-conditions">
		<div class="info">
			<div class="prefecture">
				<p>都道府県</p>
				<%= Prefecture.find(@prefecture_id).name %>
			</div>
			<div class="checkinout">
				<p>チェックイン日</p>
				<%= session[:checkin] %>
			</div>
			<div class="checkinout">
				<p>チェックアウト日</p>
				<%= session[:checkout] %>
			</div>
			<div class="people">
				<p>人数</p>
				<%= session[:people] %>
			</div>
		</div>
		<div class="features">
			<div class="feature">
				<% @work_features.each do |wf| %>
					<% if @sfw.include?(wf.id.to_s) %>
						<span class="work-feature"><%= wf.name %></span>
					<% end %>
				<% end %>
				<% @vacation_features.each do |vf| %>
					<% if @sfv.include?(vf.id.to_s) %>
					<span class="vacation-feature"><%= vf.name %></span>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
	<div>
		<%= render 'plans_search_result' %>
	</div>
</div>