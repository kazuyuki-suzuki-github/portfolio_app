<!DOCTYPE html>
<html>
  <head>
    <title>Pf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'home', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<header>
			<h1><%= link_to "Workation.com", '/'%></h1>
			<nav>
				<ul>
					<li><%= link_to "宿泊事業者ページ", companies_path %></li>
					<li><%= link_to "アカウントを作成", new_user_path %></li>
					<li><%= link_to "ログイン", login_path %></li>
					<li><%= button_to "ログアウト", logout_path , method: :delete %></li>
				</ul>
			</nav>
			<% if logged_in? %>
				<a href="#" class="panel-btn"> <%= current_user.name %> </a>
				<div class="panel">
					<div><%= link_to "アカウント", edit_user_path(current_user.id), class:"panel-menu" %></div>
					<div><%= link_to "予約", reserve_index_path, class:"panel-menu" %></div>
				</div>
			<% end %>
		</header>
		<hr>
    <%= yield %>
		<%= debug(params) if Rails.env.development? %>
  </body>
</html>
