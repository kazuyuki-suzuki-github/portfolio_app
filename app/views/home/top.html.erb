<h1>Home#top</h1>
<p>Find me in app/views/home/top.html.erb</p>

<%= form_with url:search_result_path, method: :get, local: true do |f| %>
	<div>
		都道府県
		<%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank:"選択" %>
	</div>
	<div>
		チェックイン
		<%= f.date_field :checkin, class: 'form-control' %>
	</div>
	<div>
		チェックアウト
		<%= f.date_field :checkout, class: 'form-control' %>
	</div>
	<div>
		<%= f.submit "検索" %>
	</div>
<% end %>