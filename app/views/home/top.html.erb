<h1>Home#top</h1>
<p>Find me in app/views/home/top.html.erb</p>

<%= form_with url:search_result_path, method: :get, local: true do |f| %>
	<div>
		都道府県
		<%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank:"選択" %>
	</div>
	<div>
		チェックイン
		<%= f.date_field :checkin, class: 'form-control' %>
	</div>
	<div>
		チェックアウト
		<%= f.date_field :checkout, class: 'form-control' %>
	</div>
	<div>働くの特徴</div>
	<div class="work_features">
		<% @work_features.each do |wf| %>
			<%= f.check_box :work_features, {multiple: true}, wf.id, nil  %>
			<%= label_tag "work_features_" + wf.id.to_s ,wf.name %>
		<% end %>
	</div>
	<div style="clear:left;">遊びの特徴</div>
	<div class="vacation_features">
		<% @vacation_features.each do |vf| %>
			<%= f.check_box :vacation_features, {multiple: true}, vf.id, nil  %>
			<%= label_tag "vacation_features_" + vf.id.to_s ,vf.name %>
		<% end %>
	</div>
	<div style="clear:left;">
		<%= f.submit "検索" %>
	</div>
<% end %>