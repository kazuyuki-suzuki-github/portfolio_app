<h1>Companies#index</h1>
<p>Find me in app/views/companies/index.html.erb</p>

<% if logged_in? %>
	<div>
		<%= current_user.id %>
	</div>
	<div>
		<%= current_user.name %>
	</div>
<% end %>

<% if @company %>
	<div>
		<div>
			<p>company_id</p>
			<%= @company.company_id %>
		</div>
		<div>
			<p>name</p>
			<%= @company.name %>
		</div>
		<div>
			<p>prefecture</p>
			<%= @company.prefecture.name %>
		</div>
		<div>
			<p>address</p>
			<%= @company.address %>
		</div>
		<div>
			<p>access</p>
			<%= @company.access %>
		</div>
		<div>
			<p>info</p>
			<%= @company.info %>
		</div>
		<div>
			<p>portraits</p>
			<% if @company.portraits.attached? %>
				<% @company.portraits.each do |portrait| %>
			  		<%= image_tag portrait.variant(resize_to_limit: [100, 100]) %>
				<% end %>
		  <% end %>
		</div>
		<div>
			<%= link_to "宿泊施設情報を編集する", edit_company_path(@company.id) %>
		</div>
		
		<hr>
		
		<div>
			<%= render @plans %>
		</div>
		<div>
			<%= link_to "宿泊プランを登録する", new_plan_path %>
		</div>
	</div>
<% else %>
	<div>
		<%= link_to "宿泊施設情報を登録する", new_company_path %>
	</div>
<% end %>